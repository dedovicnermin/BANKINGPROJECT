{
  "name": "postgres-bank-transactions",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSourceConnector",
    "connection.url": "jdbc:postgresql://db:5432/BANK",
    "connection.user": "postgres",
    "connection.password": "postgres",
    "topic.prefix": "postgres.bank.",
    "topics": "transactions",

    "poll.interval.ms" : 3600000,
    "table.whitelist": "transactions",
    "mode": "incrementing",
    "incrementing.column.name": "transaction_id",
    "tasks.max": "1",

    "_comment": "--- Single Message Transform (SMT) ---",
    "transforms": "setSchemaName, createKey, extractId",

    "_comment": "--- Change the Schema name ---",
    "transforms.setSchemaName.type": "org.apache.kafka.connect.transforms.SetSchemaMetadata$Value",
    "transforms.setSchemaName.schema.name": "tech.nermindedovic.persistence.data.entity.Transaction",

    "_comment": "--- Add key to the message based on accountNumber field",
    "transforms.createKey.type": "org.apache.kafka.connect.transforms.ValueToKey",
    "transforms.createKey.fields": "transaction_id",
    "transforms.extractId.type": "org.apache.kafka.connect.transforms.ExtractField$Key",
    "transforms.extractId.field": "transaction_id",

    "_comment": "--- key/value converters --- ",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "key.converter.schemas.enable": "true",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true",

    "_comment": "--- big decimal conversion sucks ---",
    "numeric.mapping": "best_fit"
  }
}
